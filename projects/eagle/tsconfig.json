{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@eagle/generated": [
        "libs/generated"
      ],
      "@eagle/generated/*": [
        "libs/generated/*"
      ],
      "@eagle/server-shared": [
        "libs/server-shared/src"
      ],
      "@eagle/server-shared/*": [
        "libs/server-shared/src/*"
      ],
      "@eagle/authentication": [
        "libs/authentication/src"
      ],
      "@eagle/authentication/*": [
        "libs/authentication/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}